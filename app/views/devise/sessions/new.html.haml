%h2 Logowanie
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, required: false, autofocus: true, label: false, placeholder: "Wpisz swój email"
    = f.input :password, required: false, label: false, placeholder: "Wpisz swoje hasło"

  .form-actions
    = f.button :submit, "Zaloguj się", class: "submit_popup"
- if devise_mapping.omniauthable?
  = link_to "Zaloguj przez fb", user_omniauth_authorize_path(:facebook), class: "facebook"
.devise-links
  = link_to "Zapomniałeś hasła?", new_password_path(resource_name), rel: "popover"