.devise-links
  - if controller_name != 'sessions'
    = link_to "Zaloguj się", new_session_path(resource_name), rel: "popover"
    

  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Zarejestruj się", new_registration_path(resource_name), rel: "popover"
    
   

  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to "Zapomniałeś hasła?", new_password_path(resource_name), rel: "popover"
    

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Zaloguj się przez #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
      
   
