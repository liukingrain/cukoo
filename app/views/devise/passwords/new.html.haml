%h2 Zapomniałeś hasła?
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post })  do |f|
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true, label: false, placeholder: "Wpisz swój email"

  .form-actions
    = f.button :submit, "Wyślij instrukcję"

= render "devise/shared/links"