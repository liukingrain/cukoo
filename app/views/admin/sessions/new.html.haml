%h2 Logowanie
= simple_form_for(AdminUser.new, as: :admin_user, url: admin_user_session_path) do |f|
  .form-group
    = f.input :email, required: false, autofocus: true, label: false, placeholder: "Wpisz swój email", input_html: { class: "form-control" }
  .form-group
    = f.input :password, required: false, label: false, placeholder: "Wpisz swoje hasło", input_html: { class: "form-control" }

  .form-actions
    = f.button :submit, "Zaloguj się", class: "btn btn-default"