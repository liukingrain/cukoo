- content_for :actions do
  .btn-group
    = link_to "Edytuj", edit_admin_product_path(@product), icon: :edit, class: "btn btn-primary"
    = link_to "Usuń", admin_product_path(@product), method: :delete, class: "btn btn-danger",
      confirm: "Czy na pewno chcesz usunąć produkt \"#{@product.name}\"?", icon: :trash

%dl
  %dt Id: 
  %dd= @product.id
  %dt Nazwa:
  %dd= @product.name
